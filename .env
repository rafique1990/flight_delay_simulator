# ==========================================================
# GENERAL APPLICATION SETTINGS
# ==========================================================
APP_NAME=flightrobustness
APP_ENV=local              # Options: local | dev | prod
LOG_LEVEL=INFO             # DEBUG, INFO, WARNING, ERROR
PORT=8000                  # API Port

# ==========================================================
# STORAGE BACKEND CONFIGURATION
# ==========================================================
# The adapter used by the app:
#   - local: reads/writes files from disk
#   - s3: reads/writes files to S3
STORAGE_BACKEND=local

# Base path for local development (used by LocalDiskAdapter)
LOCAL_DATA_DIR=./data

# ==========================================================
# AWS & S3 SETTINGS (used if STORAGE_BACKEND=s3)
# ==========================================================
AWS_REGION=eu-central-1
S3_INPUT_BUCKET=flightrobustness-input
S3_OUTPUT_BUCKET=flightrobustness-output

# IAM credentials â€” leave blank locally (can be injected by CI/CD or K8s Secrets)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# ==========================================================
# SIMULATION DEFAULTS
# ==========================================================
# Simulation mode: deterministic or monte_carlo
MODE=monte_carlo
N_RUNS=3

# Minimum turnaround time in minutes
MIN_TURNAROUND=45

# Delay distributions (Normal)
DEPARTURE_DELAY_MEAN=10
DEPARTURE_DELAY_STD=3
INFLIGHT_DELAY_MEAN=5
INFLIGHT_DELAY_STD=2

# ==========================================================
# INPUT / OUTPUT PATHS
# ==========================================================
INPUT_SCHEDULE=data/input/schedule_2.csv
OUTPUT_DIR=data/results
AGGREGATED_OUTPUT=aggregated.csv
PER_RUN_PREFIX=run_

# ==========================================================
# ðŸ“Š VISUALIZATION SETTINGS
# ==========================================================
PLOT=true
BINS=20

# ==========================================================
# DEPLOYMENT & CI/CD SETTINGS
# ==========================================================
K8S_NAMESPACE=poc
REPLICAS=2
APP_HOST=flightrobustness.yourdomain.com

# ==========================================================
# SECURITY (For CI/CD)
# ==========================================================
# These are populated by GitHub Secrets / AWS IAM Roles in prod
GITHUB_REPOSITORY=rafiquenazir/flightrobustness
GITHUB_TOKEN=
